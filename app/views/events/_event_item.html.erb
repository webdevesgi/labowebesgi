<% unless @event.nil? %>

  <div class="event-description">
    <h2><%= @event.title %></h2>
    <p>
      <%= l(@event.starts_at, format: :long_custom).capitalize %>
    </p>
  </div>

  <h2><%= t '.talks' %></h2>

  <% if @event.talks.any? %>
    <%= render partial: 'talks/talk_list', locals: {talks: @event.talks, from: :event} %>
  <% end %>

<% else %>
  <p><%= t '.no_event' %></p>
<% end %>
