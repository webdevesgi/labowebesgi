<h2><%= t(:edit_account) %></h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-vertical' }) do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors resource %>
  <%= f.input :firstname, label: t(:firstname), required: true, autofocus: true %>
  <%= f.input :lastname, label: t(:lastname), required: true %>
  <%= f.input :email, label: t(:email), required: true %>
  <%= f.input :password, label: t(:password), autocomplete: "off", hint: t(:leave_blank), required: false %>
  <%= f.input :password_confirmation, label: t(:password_confirmation), required: false %>
  <%= f.input :current_password, label: t(:current_password), :hint => t(:need_current_password), required: true %>
  <%= f.button :submit, t(:update), class: 'btn-primary' %>
<% end %>
<h3><%= t(:cancel_account) %></h3>
<p><%= t(:unhappy) %> <%= link_to t(:cancel_account), registration_path(resource_name), data: { confirm: t(:are_you_sure) }, method: :delete %>.</p>
<%= link_to t(:back), :back %>
