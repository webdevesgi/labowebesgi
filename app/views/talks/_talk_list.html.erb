<table class="table">
  <% if from == :user %>
    <thead>
      <tr>
        <th><%= t '.table_title' %></th>
        <th><%= t '.table_description' %></th>
        <th><%= t '.table_speaker' %></th>
        <th><%= t '.table_starts_at' %></th>
      </tr>
    </thead>
  <% end %>
  <tbody>
  <% talks.each do |talk| %>
    <tr>
      <td><%= talk.title %></td>
      <td><%= talk.description %></td>
      <% if from == :user %>
        <td><%= link_to talk.event.title, event_path(talk.event) %></td>
        <td><%= l talk.event.starts_at, format: :date %></td>
      <% else %>
        <td><%= link_to talk.speaker.name, user_path(talk.speaker) %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>